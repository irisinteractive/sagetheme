@font-face {
  font-family: "{{ name }}";
  font-weight: normal;
  font-style: normal;
  src: {{{ fontSrc }}};
  font-display: swap;
}

.ci:before,
.ci:after {
  display: inline-block;
  vertical-align: middle;
  font-family: '{{ name }}', sans-serif;
  font-style: initial;
  text-transform: none;
  font-weight: 400;
  font-display: swap;
}

{{# each codepoints }}
.ci--{{ @key }}:not(.ci--after):before {
  content: "\\{{ codepoint this }}";
}

.ci--{{ @key }}.ci--after:after {
  content: "\\{{ codepoint this }}";
}
{{/ each }}
